{
    "uid": "om_invoices_clearance_read",
    "description": "Subjects with clearance â‰¥ 1 may read invoices",
    "targets": {
        "subject_id": "*",
        "resource_id": "invoices",
        "action_id": "read"
    },
    "rules": {
        "resource": {
            "$.classification": {
                "condition": "IsInAttribute",
                "ace": "subject",
                "path": "$.clearance"
            }
        },
        "subject": {
			"$.role": {
				"condition": "Equals",
				"value": "ordersManager"
			}
		}
    },
    "effect": "allow",
    "priority": 10
}